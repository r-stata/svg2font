#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../ttf2svg@0.0.7/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../ttf2svg@0.0.7/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../ttf2svg@0.0.7/node_modules/ttf2svg/bin/ttf2svg.js" "$@"
else
  exec node  "$basedir/../../../../../ttf2svg@0.0.7/node_modules/ttf2svg/bin/ttf2svg.js" "$@"
fi
